{
  "name": "tab_checker",
  "version": "0.0.1",
  "description": "Pomodoro Chrome Extension w/ Crabs",
  "main": "background.js",
  "scripts": {
    "build": "rm -rf dist && tsc && copyfiles -u 1 src/**/*.html src/**/*.css dist",
    "lint": "eslint .",
    "prepare": "husky install",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Royl0406/tab_checker.git"
  },
  "keywords": [
    "pomodoro",
    "chrome-extension",
    "crab",
    "crabodoro"
  ],
  "author": "Roy <royliuzy0406@gmail.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Royl0406/tab_checker/issues"
  },
  "homepage": "https://github.com/Royl0406/tab_checker#readme",
  "devDependencies": {
    "@babel/preset-env": "^7.18.6",
    "@chiubaka/eslint-config": "^0.3.8",
    "@types/chrome": "^0.0.195",
    "babel-jest": "^28.1.3",
    "copyfiles": "^2.4.1",
    "eslint": "^8.19.0",
    "eslint-config-google": "^0.14.0",
    "husky": "^8.0.1",
    "jest": "^27.0.0",
    "jest-chrome": "^0.7.2",
    "lint-staged": "^13.0.3",
    "typescript": "^4.7.4"
  },
  "jest": {
    "transform": {
      "^.+\\.[t|j]sx?$": "babel-jest"
    },
    "setupFilesAfterEnv": [
      "./jest.setup.js"
    ],
    "collectCoverage": true,
    "coverageReporters": [
      "text",
      "clover",
      "json",
      "lcov"
    ]
  },
  "lint-staged": {
    "*.(js|ts)": [
      "eslint --fix --quiet"
    ]
  }
}
